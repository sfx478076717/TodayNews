<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/topLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">
</LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/index_state"
            android:textColor="@drawable/index_state"
            android:text="首页"
            android:textSize="10sp"
            android:gravity="center"
            android:button="@null" />
        <RadioButton
            android:id="@+id/XiguaVideo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/xigua_state"
            android:textColor="@drawable/xigua_state"
            android:text="西瓜视频"
            android:textSize="10sp"
            android:gravity="center"
            android:button="@null" />
        <RadioButton
            android:id="@+id/MicroHead"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/head_state"
            android:textColor="@drawable/head_state"
            android:text="微头条"
            android:textSize="10sp"
            android:gravity="center"
            android:button="@null" />
        <RadioButton
            android:id="@+id/LittleVideo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/little_state"
            android:textColor="@drawable/little_state"
            android:text="小视频"
            android:textSize="10sp"
            android:gravity="center"
            android:button="@null" />
    </RadioGroup>
</LinearLayout>